@* @page "/" *@
@page "/today-activation"
@inject NavigationManager Nav

<link href="css/user-activation.css" rel="stylesheet" />
@* <link href="css/user-details.css" rel="stylesheet" /> *@

<div class="ud-bg">

    <div class="ud-header">
        <span class="back" @onclick='() => Nav.NavigateTo("/dashboard")'>&larr;</span>
        <h3>Today's Activation</h3>
    </div> 

     <div class="search-box">
    <input type="text"
           placeholder="@Placeholder"
           value="@Value"
           @oninput="OnInput" />
    </div>

    <!-- Navigating cards -->
    <UserActivationCard EnableNavigation="true"
                        UserName="Pooja Sharma"
                        ShowLockActions="true"/>

    <UserActivationCard EnableNavigation="true"
                        UserName="Sunita Agrawal"
                        ShowLockActions="true" />

</div>

@code {
    [Parameter] public string Placeholder { get; set; } = "Search ..";
    [Parameter] public string Value { get; set; }
    [Parameter] public EventCallback<string> ValueChanged { get; set; }

    private async Task OnInput(ChangeEventArgs e)
    {
        await ValueChanged.InvokeAsync(e.Value?.ToString());
    }
    
}

<style>
    /* ===== FIX HEADER ROW (ARROW + TITLE SAME LINE) ===== */
.ud-header {
  display: flex;
  align-items: center;
  gap: 12px;
  padding: 12px 16px;
}

/* back arrow */
.ud-header .back {
  font-size: 22px;
  line-height: 1;
  cursor: pointer;
}

/* remove default margins that break layout */
.ud-header h3 {
  margin: 0;
  font-size: 20px;
  font-weight: 600;
}
.search-box {
  padding-left: 12px;
  padding-right: 12px;
}
.search-box input {
  width: 100%;
  height: 54px;
  padding: 0 16px;
  border-radius: 14px;
  background: transparent;        /* remove background */
  border: 1px solid #F0F0F3;      /* outline color */
  font-family: 'Inter', sans-serif;
  font-size: 16px;
  font-weight: 500;
  color: #000;
  outline: none;
}
</style>