@if (IsOpen)
{
    <div class="command-overlay" @onclick="Close">
        <div class="command-modal" @onclick:stopPropagation="true">

            <div class="command-header">
                <span>Warning</span>
                <span class="close" @onclick="Close">âœ•</span>
            </div>

            <div class="command-body">
                
                <p>Are you sure you want to proceed?</p>

                <div class="command-actions">
                    <button class="yes-btn" @onclick="Confirm">Yes</button>
                    <button class="no-btn" @onclick="Close">No</button>
                </div>
            </div>

        </div>
    </div>
}

@code {
    [Parameter] public bool IsOpen { get; set; }
    [Parameter] public EventCallback OnClose { get; set; }
    [Parameter] public EventCallback OnConfirm { get; set; }

    private async Task Close()
    {
        await OnClose.InvokeAsync();
    }

    private async Task Confirm()
    {
        await OnConfirm.InvokeAsync();
    }
}